# Backend Environment Variables
# Copy this to .env for local development

# Server Configuration
PORT=5000
NODE_ENV=development

# HTTPS Configuration (development only)
USE_HTTPS=true

# CORS Origins (production)
FRONTEND_URL=https://your-frontend-domain.onrender.com
RENDER_EXTERNAL_URL=https://your-backend-domain.onrender.com

# Application Settings
ADMIN_CODE=teach123

# Database Configuration

# Option 1: Prisma Accelerate (Recommended for production)
# Use the Accelerate connection string for connection pooling and caching
DATABASE_URL="prisma+postgres://accelerate.prisma-data.net/?api_key=YOUR_API_KEY"
# Direct connection URL for migrations (get this from your Prisma Accelerate dashboard)
DIRECT_DATABASE_URL="postgresql://user:password@host:port/database"

# Option 2: Direct PostgreSQL Connection (Local development or Render)
# DATABASE_URL="postgresql://postgres:password@localhost:5432/educanvas"
# For Render deployment without Accelerate, this will be set automatically by the PostgreSQL service

# JWT Secret for authentication (change this to a random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Other optional settings
# MAX_USERS=50
# SESSION_TIMEOUT=3600000
